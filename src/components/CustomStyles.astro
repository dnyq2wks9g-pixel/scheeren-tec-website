---
import '@fontsource-variable/inter';
---

<style is:inline>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

  :root {
    --aw-font-sans: 'Inter Variable', 'Inter', ui-sans-serif, system-ui, sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', ui-serif, serif;
    --aw-font-heading: 'Space Grotesk', ui-sans-serif, system-ui, sans-serif;

    --aw-color-primary: rgb(249 115 22);
    --aw-color-secondary: rgb(251 146 60);
    --aw-color-accent: rgb(249 115 22);

    --aw-color-text-heading: rgb(248 250 252);
    --aw-color-text-default: rgb(203 213 225);
    --aw-color-text-muted: rgb(100 116 139);
    --aw-color-bg-page: rgb(11 17 33);

    --aw-color-bg-page-dark: rgb(11 17 33);

    ::selection {
      background-color: rgb(249 115 22 / 30%);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable', 'Inter', ui-sans-serif, system-ui, sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', ui-serif, serif;
    --aw-font-heading: 'Space Grotesk', ui-sans-serif, system-ui, sans-serif;

    --aw-color-primary: rgb(249 115 22);
    --aw-color-secondary: rgb(251 146 60);
    --aw-color-accent: rgb(249 115 22);

    --aw-color-text-heading: rgb(248 250 252);
    --aw-color-text-default: rgb(203 213 225);
    --aw-color-text-muted: rgb(100 116 139);
    --aw-color-bg-page: rgb(11 17 33);

    ::selection {
      background-color: rgb(249 115 22 / 30%);
      color: white;
    }
  }
</style>
