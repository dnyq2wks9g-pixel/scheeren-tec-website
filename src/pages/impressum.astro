  <main class="pt-32 pb-20">
    <Container size="medium">
      <h1 class="text-3xl md:text-4xl font-bold text-heading-1 mb-8">Impressum</h1>

      <div class="prose prose-lg dark:prose-invert max-w-none space-y-6 text-heading-3">
        <section>
          <h2 class="text-xl font-bold text-heading-2 mb-2">Angaben gemäß § 5 TMG</h2>
          <p>
            Scheeren Tec GmbH<br />
            Kirchstraße 4<br />
            52525 Heinsberg
          </p>
        </section>

        <section>
          <h2 class="text-xl font-bold text-heading-2 mb-2">Kontakt</h2>
          <p>
            Telefon: 0 24 52 / 8 60 43 56<br />
            Mobil: 0174 / 3 21 34 93<br />
            E-Mail: <a href="mailto:info@scheeren-tec.de" class="text-primary underline">info@scheeren-tec.de</a>
          </p>
        </section>

        <section>
