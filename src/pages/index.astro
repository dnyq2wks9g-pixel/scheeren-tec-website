---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import FAQs from '~/components/widgets/FAQs.astro';

import heroImg from '~/assets/images/hero.jpg';
import refHeizung1 from '~/assets/images/ref-heizung-1.jpg';
import refHeizung2 from '~/assets/images/ref-heizung-2.jpg';
import refHeizung3 from '~/assets/images/ref-heizung-3.jpg';
import refWaermepumpe from '~/assets/images/ref-waermepumpe.jpg';

const metadata = {
  title: 'Scheeren Tec GmbH – Heizungstechnik Heinsberg',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <!-- ========== HERO (Fullscreen mit Background) ========== -->
  <section class="relative min-h-screen flex items-center justify-center md:-mt-[76px] not-prose overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <Image
        src={heroImg}
        alt="Christoph Scheeren vor dem Scheeren Tec Firmenfahrzeug"
        class="w-full h-full object-cover"
        widths={[640, 1024, 1920]}
        sizes="100vw"
        loading="eager"
        width={1920}
        height={1080}
      />
      <div class="absolute inset-0 bg-gradient-to-b from-[#0b1121]/80 via-[#0b1121]/60 to-[#0b1121]"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 text-center pt-[76px]">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-[#111827]/60 backdrop-blur-md border border-[#1e293b] text-sm text-[#cbd5e1] mb-8 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        <span class="w-2 h-2 rounded-full bg-orange-500 animate-pulse"></span>
        Vaillant Fachpartner&ensp;|&ensp;Gebäudeenergieberater HWK
      </div>

      <!-- Headline -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight tracking-tighter mb-6 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        <span class="text-[#f8fafc] font-heading block">Heizungstechnik.</span>
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-orange-500 to-amber-500 font-heading block">Modern gedacht.</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-[#cbd5e1] max-w-2xl mx-auto mb-10 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        Wärmepumpen, Heizungen & Solar im Kreis Heinsberg – seit 2016
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        <a href="#kontakt" class="btn-primary py-4 px-8 text-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2" /><line x1="16" y1="2" x2="16" y2="6" /><line x1="8" y1="2" x2="8" y2="6" /><line x1="3" y1="10" x2="21" y2="10" /></svg>
          Kostenlos beraten lassen
        </a>
        <a href="#leistungen" class="btn-secondary py-4 px-8 text-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" /></svg>
          Unsere Leistungen
        </a>
      </div>
    </div>

    <!-- Scroll-Indikator -->
    <a href="#partner" class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-scroll-indicator text-[#64748b] hover:text-orange-500 transition-colors z-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </section>

  <!-- ========== PARTNER-LEISTE ========== -->
  <section id="partner" class="py-12 md:py-16 bg-[#111827]/50 border-y border-[#1e293b]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <p class="text-center text-sm uppercase tracking-widest text-[#64748b] mb-8">Wir arbeiten mit den Besten</p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-60 hover:opacity-80 transition-opacity">
        <img src="/img/vaillant.svg" alt="Vaillant" class="h-8 md:h-10 brightness-0 invert" />
        <div class="text-white font-bold text-xl md:text-2xl tracking-tight font-heading">VIESSMANN</div>
        <div class="text-white font-bold text-xl md:text-2xl tracking-tight font-heading">BUDERUS</div>
        <div class="text-white font-bold text-xl md:text-2xl tracking-tight font-heading">BOSCH</div>
      </div>
    </div>
  </section>

  <!-- ========== LEISTUNGEN (6 Karten) ========== -->
  <section id="leistungen" class="py-16 md:py-24 scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
      <div class="text-center mb-12 md:mb-16">
        <p class="text-orange-500 font-semibold uppercase tracking-widest text-sm mb-3">Leistungen</p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold font-heading text-[#f8fafc] mb-4">Was wir für Sie tun</h2>
        <p class="text-[#cbd5e1] max-w-2xl mx-auto text-lg">Von der Beratung bis zur Wartung – Ihr Heizungsprojekt in besten Händen.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Karte 1: Wärmepumpen -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500 to-amber-500 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Wärmepumpen</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Effizient heizen mit Umweltenergie. Luft-Wasser-Wärmepumpen mit bis zu 70% Förderung – die Heiztechnik der Zukunft.</p>
        </div>
        <!-- Karte 2: Gas-Brennwert -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /><path stroke-linecap="round" stroke-linejoin="round" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Gas-Brennwert</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Modernste Brennwerttechnik für maximale Effizienz. Kompakte Geräte mit bis zu 98% Wirkungsgrad.</p>
        </div>
        <!-- Karte 3: Solarthermie -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-amber-400 to-orange-600 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Solarthermie</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Sonnenwärme intelligent nutzen. Solarthermie-Anlagen für Warmwasser und Heizungsunterstützung.</p>
        </div>
        <!-- Karte 4: Sanitär -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Sanitär</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Bad & Wasser aus Meisterhand. Professionelle Sanitärinstallation und Badsanierung aus einer Hand.</p>
        </div>
        <!-- Karte 5: Lüftungstechnik -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-teal-500 to-emerald-600 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.59 4.59A2 2 0 1111 8H2m10.59 11.41A2 2 0 1014 16H2m15.73-8.27A2.5 2.5 0 1119.5 12H2" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Lüftungstechnik</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Frische Luft, smart gesteuert. Kontrollierte Wohnraumlüftung für ein gesundes Raumklima und Energieeffizienz.</p>
        </div>
        <!-- Karte 6: Wartung & Service -->
        <div class="glass-card-hover p-8 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-green-500 to-green-700 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><circle cx="12" cy="12" r="3" /></svg>
          </div>
          <h3 class="text-xl font-bold font-heading text-[#f8fafc] mb-3">Wartung & Service</h3>
          <p class="text-[#cbd5e1] leading-relaxed">Zuverlässig, schnell, fair. Regelmäßige Wartung und schneller Reparaturservice im gesamten Kreis Heinsberg.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== ÜBER UNS (Split-Layout) ========== -->
  <section id="ueber-uns" class="py-16 md:py-24 bg-[#111827]/30 scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Bild links -->
        <div class="relative">
          <div class="rounded-2xl overflow-hidden">
            <Image
              src={refHeizung1}
              alt="Installierte Vaillant Heizungsanlage – Scheeren Tec Referenz"
              class="w-full h-auto object-cover rounded-2xl"
              widths={[400, 768]}
              sizes="(max-width: 1023px) 100vw, 50vw"
              loading="lazy"
              width={768}
              height={512}
            />
          </div>
          <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gradient-to-br from-orange-500 to-amber-500 rounded-2xl -z-10"></div>
        </div>
        <!-- Text rechts -->
        <div>
          <p class="text-orange-500 font-semibold uppercase tracking-widest text-sm mb-3">Über uns</p>
          <h2 class="text-3xl md:text-4xl font-bold font-heading text-[#f8fafc] mb-6">Scheeren Tec – Ihr Partner im Kreis Heinsberg</h2>
          <div class="accent-line-left mb-8">
            <p class="text-[#cbd5e1] text-lg leading-relaxed">
              Seit 2016 steht die Scheeren Tec GmbH für innovative Heizungstechnik und persönliche Beratung. Als Meisterbetrieb unter der Leitung von Christoph Scheeren verbinden wir handwerkliche Qualität mit modernster Technik.
            </p>
            <p class="text-[#cbd5e1] text-lg leading-relaxed mt-4">
              Als zertifizierter Vaillant Fachpartner und geprüfter Gebäudeenergieberater (HWK) bieten wir Ihnen alles aus einer Hand – von der Energieberatung über die Planung bis zur fachgerechten Installation und Wartung.
            </p>
          </div>
          <!-- Highlight-Zahlen -->
          <div class="grid grid-cols-3 gap-4">
            <div class="text-center p-4 glass-card rounded-xl">
              <div class="text-2xl md:text-3xl font-bold font-heading bg-clip-text text-transparent bg-gradient-to-r from-orange-500 to-amber-500">8+</div>
              <div class="text-sm text-[#64748b] mt-1">Jahre Erfahrung</div>
            </div>
            <div class="text-center p-4 glass-card rounded-xl">
              <div class="text-2xl md:text-3xl font-bold font-heading bg-clip-text text-transparent bg-gradient-to-r from-orange-500 to-amber-500">500+</div>
              <div class="text-sm text-[#64748b] mt-1">Kunden</div>
            </div>
            <div class="text-center p-4 glass-card rounded-xl">
              <div class="text-2xl md:text-3xl font-bold font-heading bg-clip-text text-transparent bg-gradient-to-r from-orange-500 to-amber-500">750+</div>
              <div class="text-sm text-[#64748b] mt-1">Projekte</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== WARUM WIR (USP) ========== -->
  <section id="warum-wir" class="py-16 md:py-24 scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
      <div class="text-center mb-12 md:mb-16">
        <p class="text-orange-500 font-semibold uppercase tracking-widest text-sm mb-3">Vorteile</p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold font-heading text-[#f8fafc] mb-4">Warum Scheeren Tec?</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- USP 1 -->
        <div class="text-center p-8 glass-card-hover">
          <div class="w-16 h-16 rounded-full bg-orange-500/10 border border-orange-500/20 flex items-center justify-center mx-auto mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
          </div>
          <h3 class="text-lg font-bold font-heading text-[#f8fafc] mb-2">Festpreisgarantie</h3>
          <p class="text-[#cbd5e1] text-sm leading-relaxed">Keine versteckten Kosten. Sie erhalten ein transparentes Angebot – der Preis steht.</p>
        </div>
        <!-- USP 2 -->
        <div class="text-center p-8 glass-card-hover">
          <div class="w-16 h-16 rounded-full bg-orange-500/10 border border-orange-500/20 flex items-center justify-center mx-auto mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          </div>
          <h3 class="text-lg font-bold font-heading text-[#f8fafc] mb-2">Bis zu 70% Förderung</h3>
          <p class="text-[#cbd5e1] text-sm leading-relaxed">Wir sichern Ihre Zuschüsse. Komplette Förderberatung und Antragstellung inklusive.</p>
        </div>
        <!-- USP 3 -->
        <div class="text-center p-8 glass-card-hover">
          <div class="w-16 h-16 rounded-full bg-orange-500/10 border border-orange-500/20 flex items-center justify-center mx-auto mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
          </div>
          <h3 class="text-lg font-bold font-heading text-[#f8fafc] mb-2">Vaillant Fachpartner</h3>
          <p class="text-[#cbd5e1] text-sm leading-relaxed">Zertifizierte Qualität. Premium-Produkte mit Herstellergarantie und erstklassigem Service.</p>
        </div>
        <!-- USP 4 -->
        <div class="text-center p-8 glass-card-hover">
          <div class="w-16 h-16 rounded-full bg-orange-500/10 border border-orange-500/20 flex items-center justify-center mx-auto mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
          </div>
          <h3 class="text-lg font-bold font-heading text-[#f8fafc] mb-2">Alles aus einer Hand</h3>
          <p class="text-[#cbd5e1] text-sm leading-relaxed">Von der Planung bis zur Wartung. Ein Ansprechpartner für Ihr gesamtes Projekt.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== REFERENZEN (Bild-Grid) ========== -->
  <section class="py-16 md:py-24 bg-[#111827]/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
      <div class="text-center mb-12 md:mb-16">
        <p class="text-orange-500 font-semibold uppercase tracking-widest text-sm mb-3">Referenzen</p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold font-heading text-[#f8fafc] mb-4">Ausgewählte Projekte</h2>
        <p class="text-[#cbd5e1] max-w-2xl mx-auto text-lg">Einblicke in unsere Arbeit – professionelle Heizungstechnik im Kreis Heinsberg.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Ref 1 -->
        <div class="group relative rounded-2xl overflow-hidden aspect-[4/3]">
          <Image
            src={refHeizung2}
            alt="Vaillant Brennwertanlage mit Speicher"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            widths={[400, 600]}
            sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
            loading="lazy"
            width={600}
            height={450}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-90 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
            <h3 class="text-lg font-bold font-heading text-white">Brennwertanlage Heinsberg</h3>
            <p class="text-[#cbd5e1] text-sm mt-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300">Gas-Brennwert mit Solarthermie-Unterstützung</p>
          </div>
        </div>
        <!-- Ref 2 -->
        <div class="group relative rounded-2xl overflow-hidden aspect-[4/3]">
          <Image
            src={refWaermepumpe}
            alt="Wärmepumpe Außengerät"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            widths={[400, 600]}
            sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
